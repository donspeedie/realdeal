rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /UserData/{document} {
      allow create: if request.auth.uid == document;
      allow read: if request.auth != null;
      allow write: if request.auth.uid == document;
      allow delete: if request.auth.uid == document;
    }

    match /savedProperties/{document} {
      allow create: if request.resource.data.userRef == /databases/$(database)/documents/UserData/$(request.auth.uid);
      allow read: if true;
      allow write: if resource.data.userRef == /databases/$(database)/documents/UserData/$(request.auth.uid);
      allow delete: if resource.data.userRef == /databases/$(database)/documents/UserData/$(request.auth.uid);
    }
  }
}
